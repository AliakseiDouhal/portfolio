  background url("/img/Layer 15.png") no-repeat center center
  background-size cover
  min-height 717px
  width 100%

  h1
    font-size: 1.875rem
    font-family: open_sanslight
    color: rgb(66, 218, 191)
    text-align: center
    -moz-transform: matrix( 1.17121586832131,0,0,1.16061393152302,0,0)
    -webkit-transform: matrix( 1.17121586832131,0,0,1.16061393152302,0,0)
