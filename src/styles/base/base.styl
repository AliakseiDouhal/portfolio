html
  font-size: 16px

::selection
  background: #7ae6c6
  color white/* WebKit/Blink Browsers */

::-moz-selection
  background: #7ae6c6 /* Gecko Browsers */
  color white
body
  line-height 1.35

h2
  font-size: 1.875rem
  text-align center
  font-family: convergenceregular
  color: rgb(38, 192, 165)
  padding 70px 0 30px
  margin-bottom 0

ul
  padding-left 0

li
  list-style none

a
  cursor pointer
  &:hover
    text-decoration none

.wow
  visibility: hidden

.container
  max-width: 1240px
  margin: auto
  padding 0 5%
  height 100%

.subscription
    font-size: 1rem
    font-family: cabinregular
    color: rgb(83, 83, 83)
    text-align: center
    padding-bottom 70px

.circle
  border-radius 100%

.row-wrap
  display flex
  flex-flow row wrap

.btn
  transition: background-color .4s ease-in-out, border-color .4s ease-in-out, box-shadow .4s ease-in-out, color .4s ease-in-out

.social-icons
  width: 40px
  height: 40px
  font-size: 1.5rem
  color: #7ae6c6
  border-radius: 50%
  padding: 6px 11px
  transition-duration: .3s
  transition-property: all
  transition-timing-function: cubic-bezier(.7,1,.7,1)

  &:hover
    color: #515769
    background: #fff
    transition-duration: .3s
    transition-property: all
    transition-timing-function: cubic-bezier(.7,1,.7,1)

@media only screen and (min-width: 768px)

  .white-line
    content: ""
    position: absolute
    width: 35px
    height: 2px
    background-color: white
